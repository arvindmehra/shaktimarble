<div class="panel-body">
  <%= form_tag(send_email_welcome_index_path,method: :get,:class=>"form form-horizontal",:style=>"margin:0;padding:0;display:inline") do %>
    <div class="form-group">
      <div class="col-md-12">
        <%= text_field_tag(:email,params[:email], :class => "form-control", :placeholder => "Email") %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-12">
        <%= text_field_tag(:name,params[:name], :class => "form-control", :placeholder => "Name") %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-12">
        <%= text_field_tag(:mobile,params[:mobile], :class => "form-control", :placeholder => "Mobile") %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-12">
        <%= text_area_tag(:description,params[:description], :class => "form-control", :size => "25x5", :placeholder => "Description") %>
      </div>
    </div>
    <div class="form-actions form-actions-padding-sm">
      <div class="row">
        <div class="col-md-12">
          <%= button_tag(type: 'submit', :class=>"pull-right btn btn-warning") do %>
            <i class="icon-save"></i> Submit
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>