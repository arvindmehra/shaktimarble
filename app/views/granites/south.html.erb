<div class="col-sm-12">
  <div class="container">
    <div class="row">
      <div class="col-md-8" style="padding-top:15px;">
        <%= render "layouts/side_menu" %>
        <article>
          <h3>South Area Granite</h3>
          <div class="span7 popular_products">
          <ul class="thumbnails list-unstyled">
            <% @south_area.each do |south| %>
              <li class="col-md-6">
                <div class="thumbnail">
                  <span><%= image_tag south.granite_pics.to_s, :width=>210,:height=>210 %></span>
                  <div class="productPicBoxText fonter" >
                    <span><%= south.name %></span>
                    <% if south.price.present? %>
                      <span style="float:right">Price <%= south.price %></span>
                    <% end %>
                  </div>
                </div>
                <% if current_admin %>
                  <div class="productPicBoxText fonter">
                    <span><%= link_to 'Edit',edit_granite_path(south) %> </span>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
        </article>
      </div>
      <div class="col-md-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 style="margin-top:0px;">Intrested?</h3><h3 class="panel-title">Get in Touch with the us</h3>
          </div>
          <%= render "layouts/query" %>
        </div>
      </div>
    </div>
  </div>
</div>