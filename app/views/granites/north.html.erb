<div class="col-sm-12">
  <div class="container">
    <div class="row">
      <div class="col-md-8" style="padding-top:15px;">
        <%= render "layouts/side_menu" %>
        <article>
          <h3>North Area Granite</h3>
          <div class="span7 popular_products">
          <ul class="thumbnails list-unstyled">
            <% @north_area.each do |north| %>
              <li class="col-md-6">
                <div class="thumbnail">
                  <span><%= image_tag north.granite_pics.to_s, :width=>210,:height=>210 %></span>
                  <div class="productPicBoxText fonter" >
                    <span><%= north.name %></span>
                    <% if north.price.present? %>
                      <span style="float:right">Price <%= north.price %></span>
                    <% end %>
                  </div>
                </div>
                <% if current_admin %>
                  <div class="productPicBoxText fonter">
                    <span><%= link_to 'Edit',edit_granite_path(north) %> </span>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
        </article>
      </div>
      <%= render 'layouts/query_area' %>
    </div>
  </div>
</div>