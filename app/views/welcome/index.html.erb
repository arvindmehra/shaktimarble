            </div>
          </div>
          <div class="view view-fifth">
              <%= image_tag('/home-kishangarh.jpg',alt: "Shakti Marble") %>
              <div class="mask">
                  <h2>Kishangarh Marble</h2>
                  <%= link_to("Explore",kishangarh_marbles_path, class: "info")  %>
              </div>
          </div>
          <div class="view view-fifth">
              <%= image_tag('/home-products.jpg',alt: "Shakti Marble") %>
              <div class="mask">
                  <h2>HandiCraft Products</h2>
                  <%= link_to("Explore",marble_products_path, class: "info") %>
              </div>
          </div>
        </div>
